<!DOCTYPE html>
<html lang="en">

  <%- include('layouts/header') -%>

<body>

  <%- include('layouts/navbar') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>New Post</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <h4>All fields required</h4>

        <form action="/posts/store" method="POST" enctype="multipart/form-data">

          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Title</label>
              <input type="text" class="form-control" placeholder="Title" id="title" name="title">
            </div>
          </div>

          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Message</label>
              <textarea rows="5" class="form-control" placeholder="Have something to say?" id="body" name="body"></textarea>
              <script>
                $('#body').summernote({
                  tabsize: 2,
                  height: 150
                }).val()              
              </script>
            </div>
          </div>
          
          <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                  <p class="add-image-banner">Banner Photo</p>
                  <input type="file" class="form-control" id="image" name="image">
              </div>
          </div>
          <br>
          <div class="form-group">
            <button type="submit" class="btn btn-primary" id="sendMessageButton">POST</button>
          </div>

        </form>

      </div>
    </div>
  </div>

  <hr>

  <%- include('layouts/footer') -%>
  <%- include('layouts/scripts') -%>
  
</body>

</html>
